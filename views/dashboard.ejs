<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DoubtFlow | Live Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .chat-feed { height: 450px; overflow-y: auto; background: #f8f9fa; border: 1px solid #dee2e6; border-radius: 8px; padding: 15px; }
        .sentence-card { border-left: 5px solid #198754 !important; transition: transform 0.2s; margin-bottom: 15px; }
        .sentence-card:hover { transform: translateX(5px); background-color: #f1f8f4; }
        .hidden { display: none !important; }
    </style>
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark mb-4 shadow">
        <div class="container-fluid px-4">
            <span class="navbar-brand fw-bold">DoubtFlow <small class="text-muted">| Live Analysis</small></span>
            <div class="d-flex align-items-center">
                <div id="connect-section" class="d-flex align-items-center">
                    <input type="text" id="yt-url" class="form-control form-control-sm me-2" style="width: 300px;" placeholder="YouTube URL...">
                    <button id="connect-yt" class="btn btn-sm btn-danger me-3">Connect Live</button>
                </div>
                
                <button id="break-yt" class="btn btn-sm btn-warning me-3 hidden">Break Connection ‚ö†Ô∏è</button>
                
                <a href="/doubts/history" class="btn btn-sm btn-outline-info me-2">üìä History</a>
                <span class="badge bg-secondary p-2" id="status-badge">Disconnected</span>
            </div>
        </div>
    </nav>

    <div class="container-fluid px-4">
        <div class="row g-4">
            <div class="col-md-5">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white fw-bold">Live Stream Info</div>
                    <div class="card-body chat-feed text-center" id="chat-stream">
                        <p class="text-muted mt-5" id="stream-text">Connect a video to start tracking...</p>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Grouped Student Doubts</span>
                        <span id="timer-badge" class="badge bg-warning text-dark">Sync: 10s</span>
                    </div>
                    <div class="card-body" style="min-height: 450px;">
                        <div id="top-doubts-container" class="row">
                            <p class="text-center mt-5 text-muted">Analysis will appear here.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let analysisInterval = null;

        // 1. Page load par check karein ki koi connection active hai ya nahi
        window.addEventListener('DOMContentLoaded', async () => {
            try {
                const res = await fetch('/doubts/status').then(r => r.json());
                if (res.connected) {
                    toggleUI(true, res.videoId);
                    startAnalysisLoop();
                }
            } catch (err) { console.error("Status check failed"); }
        });

        function toggleUI(isConnected, vId = "") {
            const connectSec = document.getElementById('connect-section');
            const breakBtn = document.getElementById('break-yt');
            const badge = document.getElementById('status-badge');
            const streamText = document.getElementById('stream-text');

            if (isConnected) {
                connectSec.classList.add('hidden');
                breakBtn.classList.remove('hidden');
                badge.className = "badge bg-success p-2";
                badge.innerText = "Live: Connected";
                streamText.innerText = "Active Connection: " + vId;
            } else {
                connectSec.classList.remove('hidden');
                breakBtn.classList.add('hidden');
                badge.className = "badge bg-secondary p-2";
                badge.innerText = "Disconnected";
                streamText.innerText = "Connect a video to start tracking...";
                if(analysisInterval) clearInterval(analysisInterval);
            }
        }

        document.getElementById('connect-yt').addEventListener('click', async () => {
            const rawUrl = document.getElementById('yt-url').value;
            const videoId = rawUrl.match(/(?:v=|\/)([0-9A-Za-z_-]{11}).*/)?.[1];
            if (!videoId) return alert("Invalid URL");

            const res = await fetch('/doubts/youtube/connect', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ videoId })
            }).then(r => r.json());

            if (res.status === 'success') {
                toggleUI(true, videoId);
                startAnalysisLoop();
            }
        });

        // 2. Break Connection functionality
        document.getElementById('break-yt').addEventListener('click', async () => {
            if(!confirm("Stop tracking this stream?")) return;
            const res = await fetch('/doubts/youtube/disconnect', { method: 'POST' }).then(r => r.json());
            if (res.status === 'success') {
                toggleUI(false);
                document.getElementById('top-doubts-container').innerHTML = '<p class="text-center mt-5 text-muted">Analysis cleared.</p>';
            }
        });

        function startAnalysisLoop() {
            if(analysisInterval) clearInterval(analysisInterval);
            fetchDoubts();
            analysisInterval = setInterval(fetchDoubts, 10000);
        }

        async function fetchDoubts() {
            try {
                const response = await fetch('/doubts/analyze', { method: 'POST' });
                const result = await response.json();
                if (result.status === 'success') updateUI(result.data);
            } catch (err) { console.error("Sync error:", err); }
        }

        function updateUI(topDoubts) {
            const container = document.getElementById('top-doubts-container');
            container.innerHTML = ''; 
            if(!topDoubts || topDoubts.length === 0) {
                container.innerHTML = '<p class="text-center text-muted">Listening for pattern...</p>';
                return;
            }
            topDoubts.forEach(doubt => {
                container.innerHTML += `
                    <div class="col-12">
                        <div class="card sentence-card border-0 shadow-sm bg-white">
                            <div class="card-body d-flex justify-content-between align-items-center py-2">
                                <h6 class="mb-0 text-dark">"${doubt.text}"</h6>
                                <span class="badge bg-success rounded-pill">${doubt.count} students</span>
                            </div>
                        </div>
                    </div>`;
            });
        }
    </script>
</body>
</html>